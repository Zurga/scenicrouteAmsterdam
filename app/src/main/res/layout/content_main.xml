<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jimlemmers.scenicrouteamsterdam.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="Show me a route!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preview_route_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <TextView
        android:text="Walking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walking_text"
        tools:text="Walking"
        android:layout_marginBottom="64dp"
        android:layout_alignBottom="@+id/preview_route_button"
        android:layout_alignRight="@+id/preview_route_button"
        android:layout_alignEnd="@+id/preview_route_button" />

    <Switch
        android:text="Cycling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transport_mode"
        android:layout_alignBaseline="@+id/walking_text"
        android:layout_alignBottom="@+id/walking_text"
        android:layout_toLeftOf="@+id/walking_text"
        android:layout_toStartOf="@+id/walking_text" />

    <fragment
        android:id="@+id/place_autocomplete_fragment_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/transport_mode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:id="@+id/place_autocomplete_fragment_to"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="To:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/place_autocomplete_fragment_from"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="From:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_above="@+id/place_autocomplete_fragment_to"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
